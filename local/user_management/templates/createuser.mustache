<hr>
{{#msg}}
    <div class="card mt-2 mb-2">
        <div class="card-body">
            <p>{{msg}}</p>

        </div>
    </div>
{{/msg}}

{{#info}}
    <div class="card mt-2 mb-2">
        <div class="card-body">
            <p>{{info}}</p>

        </div>
    </div>
{{/info}}

